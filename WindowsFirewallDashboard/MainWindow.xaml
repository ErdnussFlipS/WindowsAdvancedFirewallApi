		<Button x:Name="btnDisablePrivate" Content="Disable Firewall on &#xA;Private Networks" HorizontalAlignment="Left" Margin="325.8,205.4,0,0" VerticalAlignment="Top" Width="130" Height="50"/>
		<Button x:Name="btnDisableDomain" Content="Disable Firewall on &#xA;Domain Networks" HorizontalAlignment="Left" Margin="516.2,205.4,0,0" VerticalAlignment="Top" Width="130" Height="50"/>
		<Button x:Name="btnEnable" Content="Enable Firewall" HorizontalAlignment="Left" Margin="228.2,336.6,0,0" VerticalAlignment="Top" Width="130" Height="50"/>
		<Button x:Name="btnDisable" Content="Disable Firewall" HorizontalAlignment="Left" Margin="424.2,336.6,0,0" VerticalAlignment="Top" Width="130" Height="50"/>

	</Grid>
</Controls:MetroWindow>
