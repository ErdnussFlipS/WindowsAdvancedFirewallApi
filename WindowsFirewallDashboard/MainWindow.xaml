        Title="MainWindow" Height="510.973" Width="731.5" WindowStyle="None" MinWidth="800" MinHeight="600">
	<Controls:MetroWindow.RightWindowCommands>
		<Controls:WindowCommands>
			<Button Content="settings" />
			<Button>
				<StackPanel Orientation="Horizontal">
					<Rectangle Width="20" Height="20"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
						<Rectangle.OpacityMask>
							<!--Visual="{StaticResource appbar_cupcake}"-->
							<VisualBrush Stretch="Fill"/>
						</Rectangle.OpacityMask>
					</Rectangle>
					<TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text="deploy cupcakes" />
				</StackPanel>
			</Button>
		</Controls:WindowCommands>
	</Controls:MetroWindow.RightWindowCommands>

	<Grid>
		<Button x:Name="btnEnablePublic" Content="Enable Firewall on &#xD;&#xA;Public Networks" HorizontalAlignment="Left" Margin="129.8,115,0,0" VerticalAlignment="Top" Width="130" Height="50"/>
